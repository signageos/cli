{
	"specials": ["mocha"],
	"parsers": {
		"**/*.ts": "typescript",
		"**/*.js": "es6"
	},
	"detectors": [
		"importDeclaration",
		"requireCallExpression"
	],
	"ignore-dirs": [
		"dist"
	],
	"ignores": [
		"@types/*",
		"@signageos/codestyle",
		"mocha",
		"depcheck",
		"prettier",
		"c8",
		"@istanbuljs/nyc-config-typescript",
		"cross-env",
		"eslint",
		"eslint-config-prettier",
		"eslint-plugin-no-null",
		"eslint-plugin-prettier",
		"eslint-plugin-unused-imports",
		"typescript-eslint"
	]
}
