{
    "extends": "@signageos/codestyle/tsconfig-strict",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "typeRoots": [
            "node_modules/@types/"
        ],
        "lib": ["dom", "es5", "scripthost", "esnext"],
        "downlevelIteration": true,
        "declaration": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "tools/**/*.js",
        "postinstall.js",
        ".prettierrc.mjs",
        "tools/**/*.mjs",
    ]
}
