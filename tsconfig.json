{
    "extends": "@signageos/codestyle/tsconfig-strict",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "typeRoots": [
            "node_modules/@types/"
        ],
        "lib": ["dom", "es5", "scripthost", "esnext"],
        "downlevelIteration": true,
        "declaration": true,
        "allowJs": true,
        "checkJs": true,
        "noImplicitReturns": false
    },
    "include": [
        "src/**/*.ts",
        "tools/**/*.js",
    ],
    "exclude": [
        "tests/output/*.{js,ts}",
        "postinstall.js",
        ".prettierrc.mjs",
        "tools/docs/**/*"
    ]
}
